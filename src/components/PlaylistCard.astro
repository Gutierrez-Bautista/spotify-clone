---
import type { Playlist } from '@/lib/data'

import { Image } from 'astro:assets';
import PlayIcon from '@/icons/Play.astro';

interface Props {
  playlist: Playlist
}

const {cover, title} = Astro.props.playlist

---

<a href="#" class="flex group grow gap-2 bg-zinc-500/30 rounded-xl overflow-hidden hover:bg-zinc-500/50 items-center relative">
  <Image src={cover} alt={title} inferSize class='w-20 h-20' />
  <span>{title}</span>
  <div class="bg-green-500 text-zinc-900 p-1.5 transition ease-in-out duration-200 opacity-0 translate-y-4 group-hover:opacity-100 group-hover:translate-y-0 absolute right-4 rounded-full">
    <PlayIcon />
  </div>
</a>