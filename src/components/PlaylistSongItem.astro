---
import type { Song } from "@/lib/data";

interface Props {
  song: Song
}

const { song } = Astro.props

const { image, title, album, id, duration, artists } = song
console.log(artists)
---

<tr>
  <td class="whitespace-nowrap py-2 px-3">{id}</td>
  <td class="whitespace-nowrap py-2 px-3 flex gap-2">
    <img src={image} alt={title} class="h-12 rounded-md" />
    <div class="felx flex-col gap-1">
      <h5>{title}</h5>
      <span>{artists.join(', ')}</span>
    </div>
  </td>
  <td class="whitespace-nowrap py-2 px-3">{album}</td>
  <td class="whitespace-nowrap py-2 px-3 text-right">{duration}</td>
</tr>


<style>
  td:not(:first-child) {
    --tw-font-weight: 400;
    font-weight: 400;
    color: #d1d5dc;
  }
</style>