---
import Layout from '@/layouts/Layout.astro'
import PlaylistCard from '@/components/PlaylistCard.astro'

import { playlists } from '@/lib/data';
---

<Layout title='Spotify Clone'>
  <div class="relative z-10 h-full bg-zinc-900 rounded-xl overflow-auto m-1 p-5">
    <div class="grid sm:grid-cols-2 xl:grid-cols-3 pt-6 gap-4 justify-center items-center">
      {playlists.map(list => {
        return <PlaylistCard playlist={list} />
      })}
    </div>

    <div
      class="absolute inset-0 bg-gradient-to-t from-zinc-900 to-green-900 -z-[1] h-1/3"
    ></div>
  </div>
</Layout>